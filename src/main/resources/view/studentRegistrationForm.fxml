<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.studentRegistration.StudentRegistrationFormController">
   <stylesheets>
      <URL value="@style.css"/>
   </stylesheets>
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/studentRegistrationBack.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="txtFullName" layoutX="408.0" layoutY="57.0" styleClass="#txtFullName {    -fx-text-fill: white; /* Change text color to white */}" unFocusColor="WHITE">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </JFXTextField>
      <JFXTextField fx:id="txtEmail" layoutX="408.0" layoutY="95.0" unFocusColor="WHITE">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font>
      </JFXTextField>
      <Label layoutX="332.0" layoutY="63.0" text="Full Name :" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="332.0" layoutY="100.0" text="E-Mail :" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="332.0" layoutY="140.0" text="Gender :" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="332.0" layoutY="204.0" text="Course :" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="14.0" />
         </font>
      </Label>
      <JFXRadioButton fx:id="rdbtnMale" layoutX="389.0" layoutY="150.0" text="Male" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="12.0" />
         </font>
         <selectedColor>
            <Color red="0.250980406999588" green="0.3490196168422699" blue="0.6627451181411743" />
         </selectedColor>
      </JFXRadioButton>
      <JFXRadioButton fx:id="rdbtnFemale" layoutX="389.0" layoutY="179.0" text="Female" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="12.0" />
         </font>
         <selectedColor>
            <Color red="0.250980406999588" green="0.3490196168422699" blue="0.6627451181411743" />
         </selectedColor>
      </JFXRadioButton>
      <JFXComboBox fx:id="cmbx" focusColor="WHITE" layoutX="401.0" layoutY="208.0" unFocusColor="#1e1aa4" />
