         <font>
            <Font name="Times New Roman Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnReset" layoutX="380.0" layoutY="289.0" onAction="#btnResetOnAction" text="Reset" textFill="#eeeeee">
         <font>
            <Font name="Times New Roman Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnViewDetails" layoutX="468.0" layoutY="289.0" onAction="#btnViewDetailsOnActionOnAction" text="View Details" textFill="WHITE">
         <font>
            <Font name="Times New Roman Bold" size="15.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
